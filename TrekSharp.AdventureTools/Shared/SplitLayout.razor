<div class="w3-row no-print">
    <div class="w3-half w3-padding">
        @Left
    </div>
    <div class="w3-half w3-padding">
        @Right
    </div>
</div>
<div class="w3-row print">
    <div class="w3-col s6 w3-padding">
        @Left
    </div>
    <div class="w3-col s6 w3-padding">
        @Right
    </div>
</div>

@code {

    [Parameter] public RenderFragment Left { get; set; }
    [Parameter] public RenderFragment Right { get; set; }

}