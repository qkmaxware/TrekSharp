@inherits BaseDice

<div class="d6 @CssClass">
    <div class="face face-1">1</div>
    <div class="face face-2">2</div>
    <div class="face face-3">3</div>
    <div class="face face-4">4</div>
    <div class="face face-5">
        <img src="assets/challenge-effect.png" width="48" height="48"/>
    </div>
    <div class="face face-6">
        <img src="assets/challenge-effect.png" width="48" height="48"/>
    </div>
</div>

@code {
    private ChallengeDice dice = new ChallengeDice();
    private string CssClass => "d6-show-" + dice.D6Value;

    public override int NumericCount => dice.NumericValue;
    public override int EffectCount => dice.ChallengeValue == ChallengeDiceResult.Effect ? 1 : 0;

    public void Roll() {
        dice.Roll();
        StateHasChanged();
    }
}