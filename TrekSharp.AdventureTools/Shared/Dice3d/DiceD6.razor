@inherits BaseDice

<div class="d6 @CssClass">
    <div class="face face-1">1</div>
    <div class="face face-2">2</div>
    <div class="face face-3">3</div>
    <div class="face face-4">4</div>
    <div class="face face-5">5</div>
    <div class="face face-6">6</div>
</div>

@code {
    private D6 dice = new D6();
    private string CssClass => "d6-show-" + dice.NumericValue;

    public override int NumericCount => dice.NumericValue;

    public void Roll() {
        dice.Roll();
        StateHasChanged();
    }
}