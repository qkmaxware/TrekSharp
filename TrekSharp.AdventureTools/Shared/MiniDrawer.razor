<div style="position: relative; margin-left:auto; margin-right:auto;">
    @if (string.IsNullOrEmpty (Avatar.CustomNetworkImage)) {
    <TintedImage Class="pixelart" Src="@Avatar.Body" Tint=@Avatar.SkinColour></TintedImage>
    <TintedImage Class="pixelart" Src="@Avatar.Eyes" Tint=@Avatar.EyeColour Style="position: absolute; bottom: 0; left: 0;"></TintedImage>
    <img class="pixelart" src="@Avatar.Uniform" style="position: absolute; bottom: 0; left: 0;">
    <TintedImage Class="pixelart" Src="@Avatar.Beard" Tint=@Avatar.BeardColour Style="position: absolute; bottom: 0; left: 0;"></TintedImage>
    <TintedImage Class="pixelart" Src="@Avatar.Hair" Tint=@Avatar.HairColour Style="position: absolute; bottom: 0; left: 0;"></TintedImage>
    <img class="pixelart" src="@Avatar.Hat" style="position: absolute; bottom: 0; left: 0;">
    <img class="pixelart" src="@Avatar.Accessory" style="position: absolute; bottom: 0; left: 0;">
    } else {
        <img class="pixelart" src="@Avatar.CustomNetworkImage"> 
    }
</div>

@code {

    [Parameter]
    public Avatar Avatar {get; set;}

}