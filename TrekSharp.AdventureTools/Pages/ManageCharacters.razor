@page "/manage/characters"
@inherits Page
@using Data

<div class="lcars">
    <!-- Player Characters -->
    <div class="container w3-margin-bottom">
        <LCARS Title="PARTY">
            <div class="w3-padding row-fill">
                <Col4Layout Items=Data.Party>
                    <Template>
                        <div class="row" @onclick="@(() => NavigateToPlayerCharacter(context))">
                            <div class="hbar elbow-left knee-left" style="width: 32px;"></div>
                            <div class="typeface" style="margin-left: 10px; margin-right: 10px;">
                                @context.Rank @context.Name 
                            </div>
                            <div class="hbar row-fill elbow-right knee-right"></div>
                        </div>
                        <div style="width: 100%; height: 125px;" @onclick="@(() => NavigateToPlayerCharacter(context))">
                            <img src="@context.Species.GetSpeciesImageUrl()" onerror="this.src='assets/artwork/species/Unknown.png'" style="display: block; margin-left: auto; margin-right: auto;width: 100%; max-height:125px; width: auto;">
                        </div>
                        <div class="w3-padding row">
                            <div class="hbar highlight row-fill elbow-left knee-left elbow-right knee-right">
                                <b>Stress</b> <input type="number" class="w3-small" style="width: 64px;" @bind="context.UsedStress"/> / @context.TotalStress
                            </div>
                        </div>
                        <div class="w3-padding row">
                            <div class="hbar highlight row-fill elbow-left knee-left elbow-right knee-right">
                                <b>Resistance</b> <input type="number" class="w3-small" style="width: 64px;" @bind="context.Resistance"/>
                            </div>
                        </div>
                    </Template>
                </Col4Layout>
            </div>
        </LCARS>
    </div>

    <!-- Support Characters -->
    <div class="container w3-margin-bottom">
        <LCARS Title="SUPPORT">
            <div class="w3-padding row-fill">
                <Col4Layout Items=Data.Supports>
                    <Template>
                        <div class="row" @onclick="@(() => NaviateToSupportCharacter(context))">
                            <div class="hbar elbow-left knee-left" style="width: 32px;"></div>
                            <div class="typeface" style="margin-left: 10px; margin-right: 10px;">
                                @context.Rank @context.Name 
                            </div>
                            <div class="hbar row-fill elbow-right knee-right"></div>
                        </div>
                        <div style="width: 100%; height: 125px;" @onclick="@(() => NaviateToSupportCharacter(context))">
                            <img src="@context.Species.GetSpeciesImageUrl()" onerror="this.src='assets/artwork/species/Unknown.png'" style="display: block; margin-left: auto; margin-right: auto;width: 100%; max-height:125px; width: auto;">
                        </div>
                        <div class="w3-padding row">
                            <div class="hbar highlight row-fill elbow-left knee-left elbow-right knee-right">
                                <b>Stress</b> <input type="number" class="w3-small" style="width: 64px;" @bind="context.UsedStress"/> / @context.TotalStress
                            </div>
                        </div>
                        <div class="w3-padding row">
                            <div class="hbar highlight row-fill elbow-left knee-left elbow-right knee-right">
                                <b>Resistance</b> <input type="number" class="w3-small" style="width: 64px;" @bind="context.Resistance"/>
                            </div>
                        </div>
                    </Template>
                </Col4Layout>
            </div>
        </LCARS>
    </div>
</div>