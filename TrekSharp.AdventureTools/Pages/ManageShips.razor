@page "/manage/ships"
@using Data
@inherits Page

<div class="lcars">
    <!-- Player Ships -->
    <div class="w3-margin-bottom">
        <LCARS Title="SHIPS">
            <div class="row-fill">
                <Col4Layout Items=Data.Ships>
                    <Template>
                        <div class="w3-margin-bottom">
                            <div class="row" @onclick="@(() => NavigateToPlayerVessel(context))">
                                <div class="hbar elbow-left knee-left" style="width: 32px;"></div>
                                <div class="typeface" style="margin-left: 10px; margin-right: 10px;">
                                    @context.Name
                                </div>
                                <div class="hbar row-fill elbow-right knee-right" style="text-align: right;">
                                    <small>scale @(context.Scale)</small>
                                </div>
                            </div>
                            <div class="w3-row w3-padding">
                                <div class="w3-col s6" style="overflow: hidden;">
                                    <img src="assets/power.svg" width=24 height=24> <small>@(context.PowerRemaining)/@(context.Power)</small>
                                </div>
                                <div class="w3-col s6" style="overflow: hidden;">
                                    <img src="assets/shield.svg" width=24 height=24> <small>@(context.ShieldsRemaining)/@(context.Shields)</small>
                                </div>
                            </div>
                            <div style="width: 100%; height: 100px; display: table-cell; vertical-align: middle;" @onclick="@(() => NavigateToPlayerVessel(context))">
                                <img src="@context.GetShipImageUrl()" onerror="this.src='assets/artwork/ships/Unknown.png'" style="display: block; margin-left: auto; margin-right: auto;width: 100%; max-width: 640px; height: auto; max-height: 100px;">
                            </div>
                        </div>
                    </Template>
                </Col4Layout>
            </div>
        </LCARS>
    </div> 
</div>