@page "/new/player/lifepath"
@inherits Page

<LCARS Title="PLAYER LIFEPATH">
    <LifepathWizard OnCharacterDone=saveCharacter></LifepathWizard>
</LCARS>

@code {
    private void saveCharacter(PlayerCharacter character) {
        character.UsedStress = character.TotalStress;
        
        Data.Party.Add(character);
        this.NavigateToPlayerCharacter(character);
    }
}